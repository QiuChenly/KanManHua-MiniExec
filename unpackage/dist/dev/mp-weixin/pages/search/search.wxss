.content {
  height: 100%;
}
.status-search {
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}
.searchBox {
  -webkit-transition: all .5s;
  transition: all .5s;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 90rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 20rpx;
  position: relative;
}
.searchBox .searchInput {
    height: 60rpx;
    width: calc(100% - 155rpx);
    padding: 0 0 0 30rpx;
    font-size: 27rpx;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    line-height: 50rpx;
    max-lines: 1;
    background-color: rgba(204, 204, 204, 0.4);
    border-radius: 100rpx 0 0 100rpx;
}
.searchBox .clearImg {
    background-color: rgba(204, 204, 204, 0.4);
    padding: 0 15rpx 0 5rpx;
    width: 35rpx;
    height: 60rpx;
}
.searchBox .searchBtn {
    top: calc((100% - 60rpx) / 2);
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    text-align: center;
    background-color: #007AFF;
    color: #fff;
    border-radius: 0 100rpx 100rpx 0;
    width: 100rpx;
}
.sRetCls {
  height: calc(100vh - 90rpx);
}

